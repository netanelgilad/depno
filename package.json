{
  "name": "depno",
  "version": "0.1.0",
  "private": true,
  "repository": "git@github.com:netanelgilad/depno.git",
  "author": "Netanel Gilad <netanelgilad@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:ncc": "ncc build -s ./src/bin.ts",
    "build:pkg": "pkg ./dist/index.js --public --output ./dist/depno -t node13-linux-x64 && chmod +x ./dist/depno",
    "build:docker": "docker build . -t netanelgilad/depno:`git rev-parse HEAD`",
    "publish:docker": "docker push netanelgilad/depno:`git rev-parse HEAD`",
    "tag:docker": "docker tag netanelgilad/depno:`git rev-parse HEAD` netanelgilad/depno:latest && docker push netanelgilad/depno:latest",
    "test": "jest"
  },
  "pkg": {
    "assets": [
      "dist/*.map",
      "src/**/*"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "@babel/core": "^7.9.6",
    "@babel/generator": "^7.9.6",
    "@babel/plugin-transform-modules-commonjs": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@babel/traverse": "^7.9.6",
    "@babel/types": "^7.9.6",
    "@deaven/tuple": "^1.0.0",
    "async": "^3.2.0",
    "axios": "^0.19.2",
    "babel-errors": "^1.1.1",
    "jsesc": "^3.0.1",
    "tempy": "^0.5.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@types/async": "^3.2.1",
    "@types/chance": "^1.0.10",
    "@types/jest": "^25.2.1",
    "@types/jsesc": "^2.5.0",
    "@types/node": "^13.13.4",
    "@zeit/ncc": "^0.22.1",
    "babel-jest": "^25.5.1",
    "chance": "^1.1.4",
    "jest": "^25.5.4",
    "pkg": "^4.4.8",
    "prettier": "^1.19.1",
    "tempy": "^0.5.0",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  },
  "resolutions": {
    "@babel/types": "^7.9.6"
  }
}
