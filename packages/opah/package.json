{
  "name": "opah",
  "version": "0.1.31",
  "repository": "git@github.com:netanelgilad/opah.git",
  "author": "Netanel Gilad <netanelgilad@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build:ts": "tsc",
    "build:ncc": "ncc build -s ./src/bin.ts",
    "build:pkg": "pkg ./dist/index.js --public --output ./dist/opah -t node14-linux-x64 && chmod +x ./dist/opah",
    "build:docker": "docker build . -t netanelgilad/opah:`git rev-parse HEAD`",
    "publish:docker": "docker push netanelgilad/opah:`git rev-parse HEAD`",
    "tag:docker": "docker tag netanelgilad/opah:`git rev-parse HEAD` netanelgilad/opah:latest && docker push netanelgilad/opah:latest",
    "test": "jest --config=jest.config.ts",
    "prepublishOnly": "yarn build:ts"
  },
  "pkg": {
    "assets": [
      "dist/*.map",
      "src/**/*"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "@babel/core": "^7.9.6",
    "@babel/generator": "^7.9.6",
    "@babel/plugin-transform-modules-commonjs": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-typescript": "^7.9.0",
    "@babel/template": "^7.10.4",
    "@babel/traverse": "^7.9.6",
    "@babel/types": "^7.9.6",
    "@deaven/tuple": "^1.0.0",
    "@deaven/unimplemented": "^1.0.1",
    "async": "^3.2.0",
    "axios": "^0.21.1",
    "babel-errors": "^1.1.1",
    "immutable": "^4.0.0-rc.12",
    "jsesc": "^3.0.1",
    "pkg": "^4.4.8",
    "source-map-support": "^0.5.19",
    "tempy": "^0.5.0",
    "variant": "^2.0.2-beta.8"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@types/async": "^3.2.1",
    "@types/chance": "^1.0.10",
    "@types/jest": "^26.0.15",
    "@types/jsesc": "^2.5.0",
    "@types/node": "^13.13.4",
    "@types/rimraf": "^3.0.0",
    "@zeit/ncc": "^0.22.1",
    "babel-jest": "^25.5.1",
    "chance": "^1.1.4",
    "jest": "^26.6.3",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "strip-indent": "^3.0.0",
    "tempy": "^0.5.0",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.6"
  },
  "resolutions": {
    "@babel/types": "^7.9.6"
  }
}
